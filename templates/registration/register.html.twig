{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title mb-4">Create Account</h1>

                    {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                        {{ form_row(form.name, {'attr': {'class': 'mb-3'}}) }}
                        {{ form_row(form.email, {'attr': {'class': 'mb-3'}}) }}
                        {{ form_row(form.plainPassword, {'attr': {'class': 'mb-3'}}) }}

                        <button class="btn btn-primary w-100" type="submit">Register</button>
                    {{ form_end(form) }}

                    <p class="mt-3 text-center">
                        Already have an account? <a href="{{ path('app_login') }}">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}