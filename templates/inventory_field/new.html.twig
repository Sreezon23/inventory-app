{% extends 'base.html.twig' %}

{% block title %}Add New Field{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Custom Field to: {{ inventory.title }}</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <small>Defining a field here adds a column for every item in this inventory.</small>
                    </div>

                    {{ form_start(form) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.fieldName, 'Field Name') }}
                            {{ form_widget(form.fieldName, {'attr': {'class': 'form-control', 'placeholder': 'e.g. Serial Number, Weight, Condition'}}) }}
                            {{ form_errors(form.fieldName) }}
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                {{ form_label(form.fieldType, 'Data Type') }}
                                {{ form_widget(form.fieldType, {'attr': {'class': 'form-select'}}) }}
                                <div class="form-text">What kind of data will this hold?</div>
                                {{ form_errors(form.fieldType) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_label(form.storageSlot, 'Storage Slot') }}
                                {{ form_widget(form.storageSlot, {'attr': {'class': 'form-select'}}) }}
                                <div class="form-text">{{ form_help(form.storageSlot) }}</div>
                                {{ form_errors(form.storageSlot) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_label(form.fieldOrder, 'Display Order') }}
                                {{ form_widget(form.fieldOrder, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.fieldOrder) }}
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(form.isRequired, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isRequired, 'Is this field required?', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('inventory_show', {id: inventory.id}) }}" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Save Field</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}